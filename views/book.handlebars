<div id="stories">
  <link rel="stylesheet" href="/stylesheets/book.css" />
  <div><span class="badge pages">Pages</span><span class="badge discussion">Discussion</span><span class="badge notes">Technical notes</span></div>
  {{#each stories}}
    <a href="/page/{{id}}/0">
      <div class="story">
        <div class="chapterTitle">{{chapter}}</div>
        <div class="title">{{label}}</div>
        <img src="/images/stories/{{id}}.png" />
        <div class="badges"><span class="badge pages">{{pageCount}}</span> <span class="badge discussion">{{discussionCount}}</span> <span class="badge notes">{{noteCount}}</span></div>
      </div>
    </a>
  {{/each}}
</div>
