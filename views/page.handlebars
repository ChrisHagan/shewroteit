<div>
  <h3 class="comicHeader">{{story.ch}}: {{story.label}}</h3>
  {{#each story.pages}}
    <div class="page clearfix">
      <div class="col-md-6">
        {{#each content}}
          <div>
            {{#each this}}
              {{#if text}}
                <div class="partial">{{content}}</div>
              {{/if}}
              {{#if image}}
                <img class="partial {{class}}" src="/images/pages/{{../../chapter}}/{{id}}.png" />
              {{/if}}
            {{/each}}
          </div>
        {{/each}}
      </div>
      {{> comments}}
    </div>
  {{/each}}
  <div id="footerNav" class="col-md-12">
    <table>
      <tr>
        <td>
          {{#if prev.available}}
            <a href="{{prev.link}}">
              <img src="/images/nav/left.png" alt="{{prev.label}}" />
            </a>
          {{/if}}
        </td>
        <td>
          <a href="/book">
            <img src="/images/nav/center.png" alt="Home" />
          </a>
        </td>
        <td>
          {{#if next.available}}
            <a href="{{next.link}}">
              <img src="/images/nav/right.png" alt="{{next.label}}" />
            </a>
          {{/if}}
        </td>
      </tr>
    </table>
  </div>
</div>
