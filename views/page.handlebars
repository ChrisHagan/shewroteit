<div>
  <h3 class="comicHeader">{{story.chapter}}: {{story.label}}</h3>
  {{#each story.pages}}
    <div class="page clearfix">
      <div class="col-md-8">
        <div>
          <img class="comic" src="/images/pages/{{../story.id}}/{{id}}.png" alt="Page {{id}}" />
        </div>
      </div>
      <div id="comments" class="col-md-4">
        {{#each comments}}
          <ul>
            {{#each this}}
              <div class="comment">
                <div class="media">
                  <div class="pull-left">
                    <img class="media-object" src="/images/avatars/{{author}}.png" alt="{{author}} avatar" />
                  </div>
                  <div class="media-body">
                    <div>{{content}}</div>
                  </div>
                </div>
              </div>
            {{/each}}
          </ul>
        {{/each}}
      </div>
    </div>
  {{/each}}
  <div id="footerNav">
    <div class="col-md-4">
      {{#if prev.available}}
        <h3>
          <a href="{{prev.link}}">Previous: {{prev.label}}</a>
        </h3>
      {{/if}}
    </div>
    <div class="col-md-4">
      <h3>
        <a href="/book">Back to Table of Contents</a>
      </h3>
    </div>
    <div class="col-md-4">
      {{#if next.available}}
        <h3>
          <a href="{{next.link}}">Next: {{next.label}}</a>
        </h3>
      {{/if}}
    </div>
  </div>
</div>
